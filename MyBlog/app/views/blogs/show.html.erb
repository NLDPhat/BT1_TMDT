<% provide(:page_title, @blog.Title) %>
<% provide(:Per,'2')%>
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-xs-center">
    <h1><%= @blog.Title %></h1>
    <p><%= @blog.post %></p>
  </div>
</div>

<h5 class="text-muted">Comments</h5>
<% @blog.comments.each do |comment| %>
    <div class="alert alert-success" role="alert">
      <strong>Your comment: </strong> <%= comment.body %>
      <div class="text-xs-right">
        <%= link_to 'Edit', class: 'btn btn-sm btn-warning' %> | <%= link_to 'Destroy', method: :delete, data: { confirm: 'Are you sure?' }%>
      </div>
    </div>
    <div>
    
    
    </div>
<% end %>

<h5 class="text-muted">Add Comments</h5>

<%= form_for([@blog, @blog.comments.build]) do |f| %>

  <p>
    <%= f.text_area :body, size:"100x3" %>
  </p>
  
  <p>
  <%= f.submit 'Comment', :class => 'btn btn-default' %>
  </p>
<% end %>


<%= link_to 'Back', blogs_path, class: 'btn btn-default' %>
